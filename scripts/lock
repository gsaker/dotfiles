--bar-step 50 \
--redraw-thread \
--clock \
--force-clock \
--timepos x+5:y+h-80 \
--timecolor c7c7c7ff \
--datepos tx:ty+15 \
--datecolor c7c7c7ff \
--date-align 1 \
--time-align 1 \
--ringvercolor 2d2d2dcc \
--ringwrongcolor ff008888 \
--statuspos x+5:y+h-16 \
--verif-align 1 \
--wrong-align 1 \
--verifcolor 00000000 \
--wrongcolor ffffffff \
--modifpos -50:-50 \
--color 00000080 \
--time-font $FONT \
--date-font $FONT


